#contacts
  .appeal_wrapper
    overflow: hidden
    width: 735px
    margin: 0 auto 50px
    padding: 0 50px
    box-sizing: content-box  
    .message
      max-width 20.4166vw
      color white
      font-size 1.25vw
      line-height 1.5625vw
      background-color message_bg
      position relative
      border-radius 5.2083vw
      padding 1.354vw 1.666vw 1.354vw 2.0833vw
      box-sizing content-box
      margin 0 auto 30px
      user-select none
      .extended_logo
        display block
        width 5.2083vw
        height 5.2083vw
        position absolute
        right -6.614583vw
        bottom -0.52083vw      
      &:after
        content ""
        display block
        background url(./assets/icons/message_tail.svg) no-repeat bottom right
        position absolute
        width 1.8229vw
        height 2.864583vw     
        right -0.5729vw
        bottom 0
    .message_response
      max-width 19.4166vw
      color black
      font-size 1.25vw
      line-height 1.5625vw
      background-color message_response_bg
      position relative
      border-radius 5.2083vw
      padding 1.354vw 1.666vw
      box-sizing content-box
      margin 0 auto 20px
      float left
      clear left
      left 120px
      user-select none
      animation animationEnter 1s ease-out 1
      @keyframes animationEnter {
        0% { transform: scale(0) }
        50% { transform: scale(1.1) }
        100% { transform: scale(1) }  
      }
      &:before
        content ""
        display block
        background url(./assets/icons/message_response_tail.svg) no-repeat bottom right
        position absolute
        width 1.8229vw
        height 2.864583vw     
        left -0.5729vw
        bottom 0 
      &:after
        content ''
        display block
        background url(./assets/icons/unknown_user.svg) no-repeat bottom right
        position absolute
        border-radius: 50px        
        width 100px
        height 100px
        left -120px
        bottom -10px
  form 
    margin 0 auto 4.1666vw
    max-width 24.73958vw
    position relative
    .typing_wrap
      margin-left 20px
      margin-bottom 5px
      display block
      width 100%
      position absolute
      bottom 100%    
      .typing
        font-size 16px
        color gray   
    textarea
      width 100%
      height 15.625vw
      font-size 1.25vw
      line-height 1.5625vw
      background-color bg
      resize none
      margin-bottom 1.8229vw
      outline none
      border none
      border-radius 1.0416vw
      padding 1.0416vw
    input.button 
      width 9.6354vw
      margin 0 auto
      font-size 0.9375vw
      font-weight bold
      outline none 
      cursor pointer
      color white
      border none
      background #d81392
      background -moz-linear-gradient(left, #ff01d1 0%, #ff01a5 28%, #ff9b33 100%)
      background -webkit-linear-gradient(left, #ff01d1 0%,#ff01a5 28%, #ff9b33 100%)
      background linear-gradient(to right, #ff01d1 0%, #ff01a5 28%, #ff9b33 100%)
      -webkit-transition all .3s ease
      -moz-transition all .3s ease
      -o-transition all .3s ease
      transition all .3s ease
      user-select none      
      &:hover
        opacity 0.7
  footer 
    width 100%
    background-color bg
    padding 1.8229vw 0 1.5625vw
    ul.contacts
      display flex
      flex-wrap nowrap
      justify-content center
      align-items center     
      li
        margin-right 3.38541vw
        &:last-child
          margin-right 0
        a
          display block
          &.moi_krug img
            width 9.4791vw
            height 2.2916vw
          &.github img
            width 6.66vw
            height 1.8229vw
          &.linkedin img
            width 8.802vw
            height 2.1875vw
          img
            transition all .3s ease-out
          img:hover
            filter brightness(120%)
            user-select none