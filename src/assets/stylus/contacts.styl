#contacts
  .appeal_wrapper
    .message
      max-width 20.4166vw
      color white
      font-size 1.25vw
      line-height 1.5625vw
      background-color message_bg
      position relative
      border-radius 5.2083vw
      padding 1.354vw 1.666vw 1.354vw 2.0833vw
      box-sizing content-box
      margin 0 auto 4.1666vw
      user-select none
      &:before
        content ""
        display block
        background url(./assets/svg/logo_ivanopol_portfolio.svg)
        width 5.2083vw
        height 5.2083vw
        position absolute
        right -6.614583vw
        bottom -0.52083vw      
      &:after
        content ""
        display block
        background url(./assets/icons/message.svg) no-repeat bottom right
        position absolute
        width 1.8229vw
        height 2.864583vw     
        right -0.5729vw
        bottom 0
  form 
    margin 0 auto 4.1666vw
    max-width 24.73958vw
    textarea
      width 100%
      height 15.625vw
      font-size 1.25vw
      line-height 1.5625vw
      background-color bg
      resize none
      margin-bottom 1.8229vw
      outline none
      border none
      border-radius 1.0416vw
      padding 1.0416vw
    input.button 
      width 9.6354vw
      margin 0 auto
      font-size 0.9375vw
      font-weight bold
      outline none 
      cursor pointer
      color white
      border none
      background #d81392
      background -moz-linear-gradient(left, #ff01d1 0%, #ff01a5 28%, #ff9b33 100%)
      background -webkit-linear-gradient(left, #ff01d1 0%,#ff01a5 28%, #ff9b33 100%)
      background linear-gradient(to right, #ff01d1 0%, #ff01a5 28%, #ff9b33 100%)
      -webkit-transition all .3s ease
      -moz-transition all .3s ease
      -o-transition all .3s ease
      transition all .3s ease
      user-select none      
      &:hover
        opacity 0.7
  footer 
    width 100%
    background-color bg
    padding 1.8229vw 0 1.5625vw
    ul.contacts
      display flex
      flex-wrap nowrap
      justify-content center
      align-items center     
      li
        margin-right 3.38541vw
        &:last-child
          margin-right 0
        a
          display block
          &.moi_krug img
            width 9.4791vw
            height 2.2916vw
          &.github img
            width 6.66vw
            height 1.8229vw
          &.linkedin img
            width 8.802vw
            height 2.1875vw
          img
            transition all .3s ease-out
          img:hover
            filter brightness(120%)
            user-select none