@import '../../../node_modules/jeet/stylus/jeet/index'
@import '../fonts/fregat/fregat'

reset();

bg = #fafaff
select = #e7e4fd
active = #c1c1f9
blue = #619ef7
black = #312a20
dark = #43443e
gray = #8c8c8c

html 
  font-family 'Fregat'
  font-size 62.5%
  overflow-x hidden 
  box-sizing border-box

.container 
  *zoom 1
  width auto
  max-width 1605px
  float none
  display block
  margin-right auto
  margin-left auto
  padding 0 3.19vw
  &:before, &:after 
    content ''
    display table
  &:after 
    clear both
  .block_wrapper
    display flex
    flex-wrap nowrap
    justify-content center
    .block 
      *zoom 1
      clear none
      text-align inherit

.substrate 
  background-color bg
  padding 1.57vw 0
  width 100vw
  padding 1.57vw 0 5vw

.menu
  display flex
  flex-wrap nowrap
  justify-content space-around
  .logo
    img 
      width 8.5vw
      left: -3.2vw;
      position: relative;

  nav
    margin-top 1.41vw
    a
      float left
      color dark
      font-size 1.5vw
      text-decoration none
      margin-right 3.7vw
      &:last-child
        margin-right 0

.appeal
  margin-top 6.3vw
  width 37%
  max-width 548px
  h1 
    font-size 4vw
    font-weight bold
    line-height 6.3vw
    color black
  h2
    font-size 1.7vw
    font-weight 400
    letter-spacing 0.7vw
    color dark
    text-transform uppercase
    margin-bottom 0.9vw

  .underline
    background-color blue
    width 7.8vw
    max-width 150px
    height 0.42vw
    max-height 8px
    border-radius 20px
  
  p
    color gray
    font-size 1.2vw
    line-height 1.9vw
    width 80%
    max-width 438px
    margin 0.8vw 0 2.13vw

  .button
    display block
    float left
    background-color select
    color black
    font-size 1.2vw
    font-weight 700
    letter-spacing 1px
    text-transform uppercase
    text-decoration none
    padding 0.85vw 1.23vw 0.64vw 1.2vw
    border-radius: 30px
    transition background 0.2s ease-out
    &:hover
      background active
    .icon_pdf
      width 1.45vw
      height 1.6vw
      background url('./assets/icons/pdf.svg') no-repeat left center
      display inline-block
      margin-left 0.48vw
      vertical-align middle
      position relative
      top -2px

.illustration
  img 
    width 47.8vw
    
@import 'media.styl'