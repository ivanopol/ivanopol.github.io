.tooltip {
  display: block !important;
  z-index: 10000;

  .tooltip-inner {
    margin: 0 auto;
    max-width: 50%;
    background: active;
    color: black_active;
    font-size: 16px;
    line-height: 24px;
    border-radius: 16px;
    padding: 30px 40px;
  }

  .tooltip-arrow {
    width: 0;
    height: 0;
    border-style: solid;
    position: absolute;
    margin: 5px;
    border-color: active;
  }

  &[x-placement^="top"] {
    margin-bottom: 15px;

    .tooltip-arrow {
      border-width: 15px 15px 0 15px;
      border-left-color: transparent !important;
      border-right-color: transparent !important;
      border-bottom-color: transparent !important;
      bottom: -15px;
      left: calc(50% - 5px);
      margin-top: 0;
      margin-bottom: 0;
    }
  }

  &[x-placement^="bottom"] {
    margin-top: 15px;

    .tooltip-arrow {
      border-width: 0 15px 15px 15px;
      border-left-color: transparent !important;
      border-right-color: transparent !important;
      border-top-color: transparent !important;
      top: -15px;
      left: calc(50% - 15px);
      margin-top: 0;
      margin-bottom: 0;
    }
  }

  &[aria-hidden='true'] {
    visibility: hidden;
    opacity: 0;
    transition: opacity .15s, visibility .15s;
  }

  &[aria-hidden='false'] {
    visibility: visible;
    opacity: 1;
    transition: opacity .15s;
  }
}