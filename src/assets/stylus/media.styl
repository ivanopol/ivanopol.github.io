@media screen and (min-width: 1920px)
    .button
        font-size 23.04px
        padding 16.32px 23.616px 12.288px 23.04px
        .icon_pdf
        .icon_zoom
            width 27.84px
            height 30.72px
            margin-left 9.216px  
    .img_wrapper
        height 360px
    .container
        padding 0 61.248px
        .block_wrapper
            margin-top 165px
    .substrate 
        padding 30.144px 0 100px
    .menu
        padding-top 30.144px
        .logo
            img 
                width 163.2px
        nav
            margin-top 27.072px
            a 
                font-size 28.8px
                margin-right 71.04px
                // &.is-active:after
                //     border-bottom 7px dotted blue
                //     top 30px
    .appeal
        margin-top 120.96px
        h1 
            font-size 76px
            line-height 120.96px
        h2 
            font-size 32.64px
            letter-spacing 13.44px
            margin-bottom 17,28px
        p 
            font-size 23.04px
            line-height 36.48px
            margin 15.36px 0 40.896px
    .illustration
        img 
            width 917.76px
    .slide
        .content_wrapper
            img
                &.avatar
                    border 13px solid select
                    border-right-width 20px
                    border-bottom-width 20px
                    margin 0 auto 70px
            p 
                font-size 30px
                line-height 40px
                &.born:before
                    left -64px
                    top -16px
                &.pgti
                &.pnipu
                    margin-bottom 45px
                &.pgti:before
                &.pnipu:before
                    left -69px
    .siema_wrapper
        .arrow
            span
                top 100px
                font-size 19px
                line-height 32px
        .arrow_left
            left calc(100vw/2 - 860px)
        .arrow_right
            right calc(100vw/2 - 860px)
    .title
        font-size 36px
        margin-top 72px
        letter-spacing 2px
    .timeline_block
        font-size 30px
        line-height 38px
        margin-left 440px
        padding-bottom 147px
        padding-left 74px
        border-left 9px solid dark_active
        &:last-child
            padding-bottom 50px
        &:before
            width 30px
            height 30px
            border 9px solid dark_active
            top -2px
            left -28.5px
        span
            &.date
                font-size 38px
                font-weight bold
                position absolute
                left -328px
                top 0
                width 250px
                text-align right
            &.company
                font-size 38px
                letter-spacing 2px
            &.position
                font-size 28px
                margin 5px 0 15px
    #skills
        margin-bottom 94px
    .tabs
        margin 0 auto 70px
        ul 
            li
                &:first-child a
                    border-top-left-radius 50px
                    border-bottom-left-radius 50px                    
                &:last-child a 
                    border-top-right-radius 50px
                    border-bottom-right-radius 50px                      
                a
                    font-size 30px
                    padding 14px 32px
    .skills
        width 1482px
        margin-bottom 35px
        .skills_block
            font-size 30px
            margin-bottom 30px
            .skills_title
                margin-bottom 30px
            .skills_inner
                .skills_row
                    border-radius 100px
                    margin-bottom 13px
                    padding 0 0 0 32px
                    .skills_row_name
                        width 245px
                        line-height 60px
                    .skills_row_value
                        width 1205px
                        height 60px
                        &>div
                            height 100%
                            &.skills_row_value_up:after
                            &.skills_row_value_down:after
                                width 34px
                                height 38px
                                top calc(50% - 19px)
                                right -50px
                            &.skills_row_value_100.skills_row_value_up:after
                            &.skills_row_value_100.skills_row_value_down:after
                                right 20px
    .skills_other
        width 1482px
        margin 0 auto
        .skills_other_block
            margin-top 45px
            margin-right 200px
            font-size 30px
            .skills_other_title
                margin-top 45px
                font-weight bold
            .skills_other_list
                margin-top 25px
                font-weight normal
    #books
        padding-bottom 147px
        .books_wrapper
            ul
                li
                    margin-right 22px
                    a
                        border 14px solid active
                        height 565px
                        &:after
                            width 100px
                            height 100px
                            border-radius 50px
                    img
                        width 387px
                        height 537px 
    #contacts
        footer 
            padding 35px 0 30px
            ul.contacts
                li
                    margin-right 65px
                    &.moi_krug img
                        width 182px
                        height 44px
                    &.github img
                        width 128px
                        height 35px
                    &.linkedin img
                        width 169px
                        height 45px       
                                    
                            