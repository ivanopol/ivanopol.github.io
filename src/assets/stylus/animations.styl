//#############################################
// Animations
//############################################

.ivanopol_logo 
  .eye 
    animation-name blinking
    animation-duration 4s
    animation-iteration-count infinite
    transform-origin 100% 63%
  @media screen and (min-width: 1920px)
    .head
      animation-name animationLogo
      animation-duration 30s
      animation-iteration-count infinite
      animation-timing-function ease
      transform-origin center bottom

#illustration
  .icon_ubuntu
    animation rotated 50s infinite linear
  .icon_vim
  .icon_bitbucket
  .icon_docker
    animation animationFramesTwo 15s infinite linear
  .icon_laravel
    animation animationFramesOne 35s infinite linear
  
  @media screen and (min-width: 1920px)
    .background
      animation animationBackground 10s infinite linear
    .icon_git2
    .icon_git
    .icon_github
      animation animationFramesTwo 10s infinite linear      

.icon_born
  #Head
    animation animationBornAlarm 10s ease infinite 
  &:hover
    #Head
      animation animationBornAlarmHover 2s ease 1
      #Mouth 
        .cs-2
          transform-origin 10px 16px
          animation animationBornAlarmMouth 2s linear 1

  #Eyes
    animation animationBornBlinking 4s infinite linear

@keyframes animationBornBlinking {
  0% { opacity:1 }
  17% { opacity:1 }
  20% { opacity:0 }
  22% { opacity:1 }
  100% { opacity:1 }  
}

@keyframes animationBornAlarm {
  0% { transform: translateY(0) }
  25% { transform: translateY(1px)}
  50% { transform: translateY(-1px) }
  75% { transform: translateY(1px) }    
  100% { transform: translateY(0) }  
}

@keyframes animationBornAlarmHover {
  0% { transform: translateY(0) }
  5% { transform: translateY(-5px)}
  15% { transform: translateY(-3px) }    
  50% { transform: translateY(-4px) }
  75% { transform: translateY(-3px) }    
  100% { transform: translateY(0) }  
}

@keyframes animationBornAlarmMouth {
  0% { transform: scaleX(1) scaleY(1); opacity:0 }
  5% { transform: scaleX(4) scaleY(4); opacity:1 } 
  70% { transform: scaleX(4) scaleY(4); }      
  98% { opacity:1 } 
  100% { transform: scaleX(1) scaleY(1); opacity:0 }   
}

@keyframes animationLogo {
  0% { transform: rotate(0)}
  20% { transform: rotate(2deg)}
  25% { transform: rotate(-2deg)}
  60% { transform: rotate(2deg)}
  65% { transform: rotate(-2deg)}    
  100% { transform: rotate(0)}  
}

@keyframes blinking {
  0% { transform: scaleX(1) scaleY(1); } 
  18% { transform: scaleX(1) scaleY(1); } 
  20% { transform: scaleX(1) scaleY(0.1); } 
  25% { transform: scaleX(1) scaleY(1); } 
  100% { transform: scaleX(1) scaleY(1); }
}

@keyframes rotated {
  0% { transform: rotate(0); }
  100% { transform: rotate(360deg); }
}

@keyframes animationFramesOne {
  0% { transform: translate(0px,0px) rotate(0)}
  20% { transform: translate(-4.322vw,-1.5625vw) rotate(10deg) }
  50% { transform: translate(-6,927vw,2.604vw) rotate(0)}
  70% { transform: translate(-3.2727vw,3.125vw)rotate(-30deg) }
  100% { transform: translate(0px,0px) rotate(0) }  
}

@keyframes animationFramesTwo {
  0% { transform: translate(0px,0px) rotate(0)}
  30% { transform: translate(1.04166vw,-0.2604vw) rotate(10deg)}
  70% { transform: translate(0.52083vw,0.78125vw) rotate(5deg)}
  100% { transform: translate(0px,0px) rotate(0) }  
}

@keyframes animationBackground {
  0% { transform: scaleX(1) scaleY(1)}
  50% { transform: scaleX(0.97) scaleY(0.98)}
  100% { transform: scaleX(1) scaleY(1)}  
}

//#############################################
// Play states
//############################################
.logo_wrap.active
  .ivanopol_logo 
    .head
      animation-play-state running
.logo_wrap
  .ivanopol_logo 
    .head
      animation-play-state paused

#born.active
  .icon_born 
    #Head
      animation-play-state running
    #Eyes
      animation-play-state running  
#born
  .icon_born 
    #Head
      animation-play-state paused
    #Eyes
      animation-play-state paused   

#illustration
  .icon_ubuntu
  .icon_git2
  .icon_git
  .icon_github
  .background 
  .icon_vim
  .icon_bitbucket
  .icon_docker
  .icon_laravel
      animation-play-state paused
#illustration.active
  .icon_ubuntu
  .icon_git2
  .icon_git
  .icon_github
  .background 
  .icon_vim
  .icon_bitbucket
  .icon_docker
  .icon_laravel
      animation-play-state running 

//#############################################
// Delays
//############################################

.ivanopol_logo 
  .head
    animation-delay 3s
#illustration
  .background   
  .icon_git2
  .icon_bitbucket
  .icon_vim
      animation-delay 10s
