  .smooth-scrollbar
    .scrollbar-track
      height 6px
      .scrollbar-thumb
        height 6px
  underline()
    content ""
    display block
    background-color blue
    width 90px
    max-width 90px
    height 4px
    max-height 4px
    border-radius 20px
    margin 10px auto 0 
  .title
    font-size 18px
    font-weight bold
    text-align center
    letter-spacing 1px
    margin-top 43px
    margin-bottom 50px   
  #greeting
    padding 0 0 25px 0
  .container
    padding 0
    .block_wrapper
      margin 0
      flex-wrap wrap-reverse  
  .button
    font-size 13px
    line-height 13px
    padding 13px 20px 9px 
    .icon_pdf
    .icon_zoom
      width 14px
      height 16px
      margin-left 8px
  .menu 
    background none
    padding 10px 13px 0
    justify-content space-between
    .logo
      width auto
      svg
        width 60px
        .ivanopol_logo
          .a
            fill #c1c1f9
    nav
      display none
  .appeal
    width 100%
    padding 17px 34px
    margin 0
    max-width none
    h1
      font-size 25px
      line-height 25px
      margin-bottom 7px
    h2 
      font-size 16px
      margin-bottom 0
    p
      font-size 16px
      line-height 24px
      width 100%
      max-width none
      margin 0 0 15px
    .underline
      background-color blue
      width 76px
      max-width 76px
      height 3.4px
      max-height 4px
      border-radius 20px
      margin 8.5px 0   
    .button_wrapper
      text-align center
      .button
        float none
        display inline-block
  .illustration
    width 100%
    background-color select
