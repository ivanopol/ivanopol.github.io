      .icon_laravel
      .icon_git
      .icon_git2
      #background
        display none
  #history
    .slide
      height 570px
      .content_wrapper
        width 248px
        padding-bottom: 30px
        .img_wrapper
          height 196px
        img 
          &.pgti_img
            max-width none
            width 87px
          &.pnipu_img
            max-width none
            width 110px        
          &.avatar
            width 153px
            height 153px
            border 7px solid select
            border-top-width 5px
            border-right-width 9px
            border-bottom-width 9px
            margin 0 auto 38px
        p
          font-size 16px
          line-height 20px
          .icon_born
            width 13px
            height 32px
            left -21px
            top -8px
          &#born:after
            underline() 
          &.pgti
          &.pnipu
            margin-bottom 0            
          &.pgti:before
          &.pnipu:before  
            width 27px       
            height 15px
            left -32px
  .siema_wrapper
    .button_wrapper
      display none
    .arrow
      width 46px
      height 46px
      top 78%
      span
        font-size 10px
        line-height 12px
        top 55px
    .arrow_left
      left 82px
    .arrow_right
      right 82px
  #experience
    .timeline_block
      font-size 16px
      line-height 20px
      margin-left 30px
      width 85%
      border-left-width 4px
      border-left-style solid
      border-left-color dark_active
      ul 
        li
          margin-left 6px
          margin-bottom 8px
          &:before
            width: 10px
            height: 2px
            left: -5px
      &:last-child
        padding-bottom 50px
        border-left-color transparent      
      &:before
        width 7px
        height 7px
        border-width 4px
        border-style solid
        border-color dark_active
        border-radius 10px
        left -9px
        top -1px
      span
        &.date
          font-size 16px
          letter-spacing 1px
          position relative
          left 0
          top 0
          width: 100%
          text-align left
          margin-bottom 8px
        &.company
          font-size 14px
          letter-spacing 1px
          margin 0
        &.position
          font-size 14px
          margin 2px 0 8px  
  #skills
    padding-bottom 60px
  .tabs
    margin 0 auto 43px
    ul 
      display flex
      flex-wrap nowrap
      justify-content center  
      align-items center    
      li
        float left
        &:first-child a
          border-top-left-radius 20px
          border-bottom-left-radius 20px
        &:last-child a
          border-top-right-radius 20px
          border-bottom-right-radius 20px     
        &.is-active a
          color black
          cursor default
          background-color active
        a 
          color gray
          font-size 16px
          background-color select
          padding 14px 17px 12px
          transition background 0.2s ease-out
          cursor pointer
          user-select none              
  .skills
    width 85%
    margin 0 auto 20px
    .skills_block
      font-size 14px
      margin-bottom 14px
      .skills_title
        font-size 16px
        font-weight bold
        margin-bottom 9px
      .skills_inner
        .skills_row
          border-radius 20px
          margin-bottom 9px
          padding 0 0 0 9px
          background-color bg
          overflow hidden
          .skills_row_name
            width 25%
            font-weight normal
            line-height 28px
            display inline-block
            vertical-align middle
            overflow hidden
            white-space nowrap
          .skills_row_value
            width 75%
            height 28px
            display inline-block
            vertical-align middle
            position relative
            &>div
              height 100%
              position relative
              &.skills_row_value_up:after
              &.skills_row_value_down:after
                width 13px
                height 15px
                display block
                top calc(50% - 7px)
                right -20px
                position absolute
              &.skills_row_value_100.skills_row_value_up:after
              &.skills_row_value_100.skills_row_value_down:after
                right 10px
  .skills_other
    width 85%
    margin 0 auto  
    overflow hidden
    .skills_other_block
      float left
      margin-right 0
      font-size 16px
      line-height: 20px      
      .skills_other_title
        font-weight bold        
        margin-top 18px
      .skills_other_list
        margin-top 8px
        font-weight normal
  #books
    padding-bottom 60px
    .books_wrapper
      width 232px
      height 170px
      margin 0 auto
      ul 
        overflow-x: auto
        overflow-y: hidden
        width 737px
        li
          float left
          margin-right 10px
          &:last-child
            margin-right 0!important
          a
            border 4px solid active
            display inline-block
            height 152px
            transition border-color 0.3s ease-out
            user-select none
            position relative
            display flex
            flex-wrap nowrap
            justify-content center  
            align-items center          
            &:after
              content ""
              display block
              background url(./assets/icons/paper-plane.svg) no-repeat center center
              background-color rgba(40%, 35%, 63%, 0.95)
              background-size 40%
              width 40px
              height 40px
              position absolute
              border-radius: 20px
              transition all .3s ease-out
              opacity 0
            &:hover
              border-color #adadf7
              &:after
                opacity 1
              img
                -webkit-filter brightness(110%)
                filter brightness(110%)
            img
              width 104px
              height 143px
              -webkit-filter brightness(95%)
              filter brightness(95%)          
              -webkit-transition all .3s ease
              -moz-transition all .3s ease
              -o-transition all .3s ease
              transition all .3s ease
              user-select none    
  #contacts
    .appeal_wrapper
      .message
        max-width none
        width 230px
        color white
        font-size 14px
        line-height 16px
        background-color message_bg
        position relative
        border-radius 27px
        padding 13px 4px 13px 14px
        box-sizing content-box
        margin 0 auto 45px
        user-select none
        left  -28px
        .extended_logo
          display block
          width 50px
          height 50px
          position absolute
          right -55px
          bottom -2px
        &:after
          content ""
          display block
          background url(./assets/icons/message_tail.svg) no-repeat bottom right
          position absolute
          width 16px
          height 53px
          right -3px
          bottom 3px
    form 
      margin 0 auto 40px
      max-width none
      width 260px
      textarea
        width 100%
        height 175px
        font-size 16px
        line-height 18px
        background-color bg
        resize none
        margin-bottom 20px
        outline none
        border none
        border-radius 13px
        padding 15px
      input.button 
        width 148px
        margin 0 auto
        font-size 16px
        font-weight bold
        outline none 
        cursor pointer
        color white
        border none
        background #d81392
        background -moz-linear-gradient(left, #ff01d1 0%, #ff01a5 28%, #ff9b33 100%)
        background -webkit-linear-gradient(left, #ff01d1 0%,#ff01a5 28%, #ff9b33 100%)
        background linear-gradient(to right, #ff01d1 0%, #ff01a5 28%, #ff9b33 100%)
        -webkit-transition all .3s ease
        -moz-transition all .3s ease
        -o-transition all .3s ease
        transition all .3s ease
        user-select none      
        &:hover
          opacity 0.7
    footer 
      width 100%
      background-color bg
      padding 20px 0 18px
      ul.contacts
        display flex
        flex-wrap nowrap
        justify-content center
        align-items center     
        li
          margin-right 25px
          &:last-child
            margin-right 0
          a
            display block
            &.moi_krug img
              width 82px
              height 42px
            &.github img
              width 65px
              height 18px
            &.linkedin img
              width 85px
              height 23px
            img
              transition all .3s ease-out
            img:hover
              filter brightness(120%)
              user-select none                  