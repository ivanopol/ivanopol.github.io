html 
  font-family 'Fregat'
  font-size 62.5%
  overflow-x hidden 
  box-sizing border-box

textarea
input 
  font-family 'Fregat'
  color black

.smooth-scrollbar
  overflow unset!important

.scrollbar-track
  background-color active!important
  border-radius 20px

.scrollbar-thumb
  background-color dark_active!important
  cursor pointer

.tooltip
  border-bottom 4px dotted #a9a7b2
  padding-bottom 3px
  cursor help

context = 19.2
get-vw(target) 
  (target / context)vw

underline()
  content ""
  display block
  background-color blue
  width get-vw(150px)
  max-width 150px
  height get-vw(8px)
  max-height 8px
  border-radius 20px
  margin get-vw(29px) auto 0
  position relative
  @media screen and (min-width: 1920px)
    margin 29px auto 0
.title
  font-size get-vw(36px)
  font-weight bold
  text-align center
  letter-spacing get-vw(2px)
  margin-top get-vw(72px)
  margin-bottom get-vw(82px)
  &:after
    underline()
a
  color blue
.button
  display block
  background-color active
  color black
  font-size get-vw(23px)
  font-weight 700
  line-height get-vw(23px)
  letter-spacing 1px
  text-transform uppercase
  text-decoration none
  padding get-vw(16px) get-vw(23px) get-vw(10px) get-vw(23px)
  border-radius: 50px
  transition background 0.2s ease-out
  user-select none
  &:hover
    background select
  .icon_pdf
  .icon_zoom
    width get-vw(28px)
    height get-vw(31px)
    margin-left get-vw(9px)
    display inline-block    
    vertical-align middle
    position relative
    top -2px  
  .icon_pdf
    background url('./assets/icons/pdf.svg') no-repeat left center
  .icon_zoom
    background url('./assets/icons/zoom.svg') no-repeat left center

@media screen and (min-width : 768px)
  #progress-container-el 
    background-color select !important
   
#progress-el 
  background-color active !important

.img_wrapper
  height get-vw(361px)
  display flex
  flex-wrap nowrap
  justify-content center  
  align-items center  
  
.container 
  *zoom 1
  width auto
  max-width 1605px
  min-width 320px
  float none
  display block
  margin-right auto
  margin-left auto
  padding 0 get-vw(61px)
  &:before, &:after 
    content ''
    display table
  &:after 
    clear both
  .block_wrapper
    margin-top get-vw(165px)
    display flex
    flex-wrap nowrap
    justify-content center
    .block 
      *zoom 1
      clear none
      text-align inherit

.substrate 
  background-color bg
  width 100vw
  min-width 320px
  padding get-vw(30px) 0 get-vw(96px)
  