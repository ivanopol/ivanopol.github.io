html 
  font-family 'Fregat'
  font-size 62.5%
  overflow-x hidden 
  box-sizing border-box

textarea
input 
  font-family 'Fregat'
  color black

.smooth-scrollbar
  overflow unset!important

.scrollbar-track
  background-color active!important
  border-radius 15px

.scrollbar-thumb
  background-color dark_active!important
  cursor pointer

underline()
  content ""
  display block
  background-color blue
  width 7.8vw
  max-width 150px
  height 0.42vw
  max-height 8px
  border-radius 20px
  margin 1.511vw auto 0

  @media screen and (min-width: 1920px)
    margin 29px auto 0

a
  color blue

.button
  display block
  background-color active
  color black
  font-size 1.2vw
  font-weight 700
  line-height 1.2vw
  letter-spacing 1px
  text-transform uppercase
  text-decoration none
  padding 0.85vw 1.23vw 0.52083vw 1.2vw
  border-radius: 50px
  transition background 0.2s ease-out
  user-select none
  &:hover
    background select
  .icon_pdf
  .icon_zoom
    width 1.45vw
    height 1.6vw
    margin-left 0.48vw
    display inline-block    
    vertical-align middle
    position relative
    top -2px  
  .icon_pdf
    background url('./assets/icons/pdf.svg') no-repeat left center
  .icon_zoom
    background url('./assets/icons/zoom.svg') no-repeat left center

#progress-container-el 
  background-color select !important
   
#progress-el 
  background-color active !important

.img_wrapper
  height 18.8vw
  display flex
  flex-wrap nowrap
  justify-content center  
  align-items center  
.container 
  *zoom 1
  width auto
  max-width 1605px
  float none
  display block
  margin-right auto
  margin-left auto
  padding 0 3.19vw
  &:before, &:after 
    content ''
    display table
  &:after 
    clear both
  .block_wrapper
    margin-top 8.59375vw
    display flex
    flex-wrap nowrap
    justify-content center
    .block 
      *zoom 1
      clear none
      text-align inherit

.substrate 
  background-color bg
  width 100vw
  padding 1.57vw 0 5vw
  