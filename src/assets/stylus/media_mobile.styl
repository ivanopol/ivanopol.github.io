@media screen and (max-width : 768px)
  context = 3.75
  get-vw(target) 
    (target / context)vw 
  .smooth-scrollbar
    .scrollbar-track
      height get-vw(6px)
      .scrollbar-thumb
        height get-vw(6px)
  underline()
    content ""
    display block
    background-color blue
    width get-vw(60px)
    max-width 90px
    height get-vw(4px)
    max-height 6px
    border-radius 20px
    margin get-vw(10px) auto 0  
  .title
    font-size get-vw(16px)
    font-weight bold
    text-align center
    letter-spacing get-vw(1px)
    margin-top get-vw(43px)
    margin-bottom get-vw(50px)
    &:after
      underline()       
  #greeting
    padding 0 0 6.666vw 0
  .container
    padding 0
    .block_wrapper
      margin 0
      flex-wrap wrap-reverse  
  .button
    font-size 4.266vw
    line-height 4.266vw
