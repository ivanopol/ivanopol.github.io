    .icon_pdf
    .icon_zoom
      width 4.533vw
      height 5.066vw
      margin-left 2.4vw
  .menu 
    background none
    padding 3.2vw 4vw 0
    justify-content space-between
    .logo
      width auto
      svg
        width 18.666vw
        .ivanopol_logo
          .a
            fill #c1c1f9
    nav
      display none
  .appeal
    width 100%
    padding 5.333vw 10.666vw
    margin 0
    max-width none
    h1
      font-size 8vw
      line-height 8vw
      margin-bottom 2.1333vw
    h2 
      font-size 3.2vw
      margin-bottom 0
    p
      font-size 3.7333vw
      line-height 5.333vw
      width 100%
      max-width none
      margin 0 0 4.8vw
    .underline
      background-color blue
      width 24vw
      max-width 24vw
