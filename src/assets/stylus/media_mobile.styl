        height 10.666vw 
      .icon_laravel
      .icon_git
      .icon_git2
      #background
        display none
  #history
    .slide
      height 178.1333vw
      .content_wrapper
        width 70.666vw
        .img_wrapper
          height 61.333vw
        img 
          &.pgti_img
            max-width 27.2vw
