  underline()
    content ""
    display block
    background-color blue
    width 90px
    max-width 90px
    height 4px
    max-height 4px
    border-radius 20px
    margin 10px auto 0  
  #greeting
    padding 0 0 6.666vw 0
  .container
    padding 0
    .block_wrapper
      margin 0
      flex-wrap wrap-reverse  
  .button
    font-size 4.266vw
    line-height 4.266vw
